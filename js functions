//function to calculate the tax
//person who gets salary lessthan 3lpa has no tax deductions
//person who gets salary less than 6lpa has deductions => 10% over 3 lakhs
//salary is greater than 6 lpa then 20% deduction on excess amt


function taxcalculation(salary,name){
  if(salary <= 300000){
    console.log('no tax deduction')
  }
  //less than 6lpa
   else if(salary <= 600000){
    let deductions = (salary - 300000) *0.1;
        console.log(deductions)
  }

}

taxcalculation(200000,'sravani')

