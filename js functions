//function is a block of code that can perform the specific task 
//for which we have defined the function when we want
//this is body of function
//this doesnt work because we are not calling function
function grinder(items){
  console.log('grinding...',items)
}
//this is calling a function 
grinder('tomatoes');
//we can call a func multiple times to run multiple times
grinder('onions');
grinder();

